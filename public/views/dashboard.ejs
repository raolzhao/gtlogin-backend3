<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Login System</title>
  <link rel="icon" type="image/x-icon" href="/favicon.webp">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
      color: #fff;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #25252b;
      overflow: hidden;
    }

    .container {
      position: relative;
      width: 100%;
      max-width: 700px;
      height: 100%;
      max-height: 480px;
      border: 4px solid #000;
      box-shadow: 8px 8px 0px 0px #000;
      border-radius: 0;
      background: linear-gradient(135deg, #25252b 50%, #e46033 100%);
      transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
      display: flex;
      overflow: hidden;
    }

    .container .form-box {
      position: absolute;
      top: 0;
      width: 50%;
      height: 100%;
      display: flex;
      justify-content: center;
      flex-direction: column;
      z-index: 10;
      transition: all 0.4s ease-in-out;
    }

    .form-box.Login {
      left: 0;
      padding: 0 30px;
    }

    .form-box.Login .animation {
      transform: translateX(0);
      opacity: 1;
      transition: 0.4s ease;
    }

    .container.active .form-box.Login {
      transform: translateX(-100%);
      opacity: 0;
      pointer-events: none;
    }

    .form-box.Register {
      right: -50%;
      padding: 0 30px;
      opacity: 0;
      pointer-events: none;
    }

    .container.active .form-box.Register {
      right: 0;
      opacity: 1;
      pointer-events: auto;
    }

    .form-box h2 {
      font-size: 28px;
      text-align: center;
      margin-bottom: 15px;
      font-weight: 900;
      text-transform: uppercase;
      text-shadow: 3px 3px 0 #000;
      color: #fff;
    }

    .form-box .input-box {
      position: relative;
      width: 100%;
      height: 40px;
      margin-top: 10px;
      margin-bottom: 15px;
    }

    .input-box input {
      width: 100%;
      height: 100%;
      background: #fff;
      border: 3px solid #000;
      outline: none;
      font-size: 13px;
      color: #000;
      font-weight: 700;
      padding: 0 12px;
      box-shadow: 4px 4px 0 #000;
      transition: 0.2s;
    }

    .input-box input:focus {
      transform: translate(2px, 2px);
      box-shadow: 2px 2px 0 #000;
      border-color: #e46033;
    }

    .input-box label {
      position: absolute;
      top: -10px;
      left: 10px;
      background: #000;
      color: #fff;
      border: 1px solid #fff;
      padding: 1px 6px;
      font-size: 10px;
      font-weight: 700;
      text-transform: uppercase;
      pointer-events: none;
    }

    .input-box input:focus~label {
      background: #e46033;
      border-color: #000;
    }

    .input-box box-icon {
      display: none;
    }

    .btn {
      position: relative;
      width: 100%;
      height: 40px;
      background: #e46033;
      border: 3px solid #000;
      box-shadow: 4px 4px 0 #000;
      cursor: pointer;
      font-size: 14px;
      font-weight: 900;
      text-transform: uppercase;
      margin-top: 10px;
      color: #fff;
      transition: 0.1s;
    }

    .btn:active {
      transform: translate(4px, 4px);
      box-shadow: 1px 1px 0 #000;
    }

    .regi-link {
      font-size: 11px;
      text-align: center;
      margin-top: 12px;
    }

    .regi-link a {
      text-decoration: none;
      color: #000;
      font-weight: 800;
      background: #fff;
      padding: 2px 5px;
      border: 2px solid #000;
      margin-left: 5px;
      box-shadow: 2px 2px 0 #000;
      display: inline-block;
      transition: 0.2s;
    }

    .regi-link a:hover {
      transform: translate(1px, 1px);
      box-shadow: 1px 1px 0 #000;
      background: #e46033;
      color: #fff;
    }

    .info-content {
      position: absolute;
      top: 0;
      height: 100%;
      width: 50%;
      display: flex;
      justify-content: center;
      flex-direction: column;
      transition: 0.4s ease-in-out;
    }

    .info-content.Login {
      right: 0;
      text-align: right;
      padding: 0 25px 0 0;
      align-items: flex-end;
    }

    .container.active .info-content.Login {
      transform: translateX(100%);
      opacity: 0;
    }

    .info-content.Register {
      left: 0;
      text-align: left;
      padding: 0 0 0 25px;
      align-items: flex-start;
      margin-left: -50%;
      opacity: 0;
    }

    .container.active .info-content.Register {
      margin-left: 0;
      opacity: 1;
    }

    .logo-container {
      display: flex;
      justify-content: center;
      margin-bottom: 0.3rem;
    }

    .logo-container img {
      width: 140px;
      height: auto;
      filter: drop-shadow(3px 3px 0px #000);
    }

    .info-content h2 {
      margin-top: 0;
      margin-bottom: 5px;
      font-size: 22px;
      font-weight: 900;
      text-shadow: 2px 2px 0 #000;
      color: #fff;
    }

    .info-content p {
      font-size: 11px;
      line-height: 1.3;
      background: #000;
      color: #fff;
      padding: 6px;
      box-shadow: 4px 4px 0 #fff;
      border: 2px solid #fff;
    }

    .error-message {
      position: absolute;
      bottom: -18px;
      left: 0;
      color: #fff;
      background: #ff0000;
      border: 2px solid #000;
      font-size: 9px;
      font-weight: 700;
      padding: 1px 4px;
      opacity: 0;
      transition: 0.2s;
    }

    .error-message.show {
      opacity: 1;
      bottom: -20px;
    }

    .loading {
      opacity: 0.7;
      pointer-events: none;
    }

    @media (max-width: 600px) {
      .container {
        max-height: none;
        height: 100vh;
        border: none;
        box-shadow: none;
      }

      .info-content {
        display: none;
      }

      .container .form-box {
        width: 100%;
        padding: 0 20px;
      }

      .form-box.Register {
        right: -100%;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="form-box Login">
      <h2 class="animation">Login</h2>
      <form method="post" action="/player/growid/login/validate" id="loginForm">
        <input name="type" value="log" type="hidden" />
        <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />

        <div class="input-box animation">
          <input type="text" name="growId" id="loginGrowId" required>
          <label for="loginGrowId">GrowID</label>
          <div class="error-message" id="loginUsernameError"></div>
        </div>

        <div class="input-box animation">
          <input type="password" name="password" id="loginPassword" required>
          <label for="loginPassword">Password</label>
          <div class="error-message" id="loginPasswordError"></div>
        </div>

        <div class="animation">
          <button type="submit" id="loginButton" class="btn">Login</button>
        </div>

        <div class="regi-link animation">
          <p>Don't have an account? <br> <a href="#" class="SignUpLink">Sign Up</a></p>
        </div>
      </form>
    </div>

    <div class="info-content Login">
      <div class="logo-container">
        <img src="/game_title.png" alt="Game Title">
      </div>
      <h2>WELCOME BACK!</h2>
      <p>Happy to have you with us again.</p>
    </div>

    <div class="form-box Register">
      <h2 class="animation">Register</h2>
      <form method="post" action="/player/growid/login/validate" id="regisForm">
        <input name="type" value="reg" type="hidden" />
        <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />

        <div class="input-box animation">
          <input type="text" name="growId" id="regisGrowId" required>
          <label for="regisGrowId">GrowID</label>
          <div class="error-message" id="regisUsernameError"></div>
        </div>

        <div class="input-box animation">
          <input type="email" name="email" id="regisEmail" required>
          <label for="regisEmail">Email</label>
          <div class="error-message" id="regisEmailError"></div>
        </div>

        <div class="input-box animation">
          <input type="password" name="password" id="regisPassword" required>
          <label for="regisPassword">Password</label>
          <div class="error-message" id="regisPasswordError"></div>
        </div>

        <div class="animation">
          <button type="submit" id="regisButton" class="btn">Register</button>
        </div>

        <div class="regi-link animation">
          <p>Already have an account? <br> <a href="#" class="SignInLink">Sign In</a></p>
        </div>
      </form>
    </div>

    <div class="info-content Register">
      <div class="logo-container">
        <img src="/game_title.png" alt="Game Title">
      </div>
      <h2>WELCOME!</h2>
      <p>Delighted to have you here.</p>
    </div>
  </div>

  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (localStorage.getItem('growId')) {
        const loginGrowId = document.getElementById('loginGrowId');
        if (loginGrowId) {
          loginGrowId.value = localStorage.getItem('growId');
        }
      }

      const validateUsername = (username, errorElement) => {
        if (!username) {
          showValidationError(errorElement, 'Enter username');
          return false;
        } else if (username.length < 4) {
          showValidationError(errorElement, 'Min 4 chars');
          return false;
        } else if (!/^[a-zA-Z0-9]+$/.test(username)) {
          showValidationError(errorElement, 'Invalid username');
          return false;
        }
        return true;
      };

      const validatePassword = (password, errorElement) => {
        if (!password) {
          showValidationError(errorElement, 'Enter password');
          return false;
        } else if (password.length < 6) {
          showValidationError(errorElement, 'Min 6 chars');
          return false;
        }
        return true;
      };

      const validateEmail = (email, errorElement) => {
        if (!email) {
          showValidationError(errorElement, 'Enter email');
          return false;
        } else if (!/^\S+@\S+\.\S+$/.test(email)) {
          showValidationError(errorElement, 'Invalid format');
          return false;
        }
        return true;
      };

      const showValidationError = (errorElement, message) => {
        if (errorElement) {
          errorElement.innerHTML = message;
          errorElement.classList.add('show');
        }
      };

      function resetErrors(formId) {
        const form = document.getElementById(formId);
        const errorMessages = form.querySelectorAll('.error-message');
        errorMessages.forEach(error => {
          error.classList.remove('show');
        });
      }

      const form_regis = document.getElementById('regisForm');
      if (form_regis) {
        form_regis.addEventListener('submit', function (e) {
          e.preventDefault();
          const uName = document.getElementById('regisGrowId')?.value.trim();
          const uPass = document.getElementById('regisPassword')?.value.trim();
          const uEmail = document.getElementById('regisEmail')?.value.trim();
          resetErrors('regisForm');
          if (validateUsername(uName, document.getElementById('regisUsernameError')) &&
            validatePassword(uPass, document.getElementById('regisPasswordError')) &&
            validateEmail(uEmail, document.getElementById('regisEmailError'))) {
            const btn = document.getElementById("regisButton");
            btn.textContent = "Processing...";
            btn.classList.add("loading");
            setTimeout(() => {
              form_regis.submit();
              localStorage.setItem('tempGrowId', uName);
            }, 1000);
          }
        });
      }

      const form_login = document.getElementById('loginForm');
      if (form_login) {
        form_login.addEventListener('submit', function (e) {
          e.preventDefault();
          const growId = document.getElementById('loginGrowId')?.value.trim();
          const password = document.getElementById('loginPassword')?.value.trim();
          resetErrors('loginForm');
          if (validateUsername(growId, document.getElementById('loginUsernameError')) &&
            validatePassword(password, document.getElementById('loginPasswordError'))) {
            const btn = document.getElementById("loginButton");
            btn.textContent = "Logging in...";
            btn.classList.add("loading");
            setTimeout(() => {
              form_login.submit();
              localStorage.setItem('growId', growId);
            }, 1000);
          }
        });
      }

      const container = document.querySelector(".container");
      const registerBtn = document.querySelector(".SignUpLink");
      const loginBtn = document.querySelector(".SignInLink");

      if (container && registerBtn && loginBtn) {
        registerBtn.addEventListener("click", (e) => {
          e.preventDefault();
          container.classList.add("active");
          resetErrors('regisForm');
        });
        loginBtn.addEventListener("click", (e) => {
          e.preventDefault();
          container.classList.remove("active");
          resetErrors('loginForm');
        });
      }
    });
  </script>
</body>

</html>